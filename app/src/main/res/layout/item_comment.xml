<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        style="@style/CardViewItem">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:text="id:"
                app:layout_constraintBottom_toTopOf="@+id/lbl_name"
                app:layout_constraintEnd_toStartOf="@+id/text_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_id"
                app:layout_constraintStart_toEndOf="@+id/lbl_id"
                app:layout_constraintTop_toTopOf="@+id/lbl_id"
                tools:text="52" />

            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:text="name:"
                app:layout_constraintBottom_toTopOf="@+id/lbl_email"
                app:layout_constraintEnd_toStartOf="@+id/text_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_id" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_name"
                app:layout_constraintStart_toEndOf="@+id/lbl_name"
                app:layout_constraintTop_toTopOf="@+id/lbl_name"
                tools:text="Sergii" />

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="email:"
                app:layout_constraintBottom_toTopOf="@+id/lbl_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_name" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/lbl_email"
                app:layout_constraintStart_toEndOf="@+id/lbl_email"
                app:layout_constraintTop_toTopOf="@+id/lbl_email"
                tools:text="address@mail.com" />

            <TextView
                android:id="@+id/lbl_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="body:"
                app:layout_constraintEnd_toStartOf="@+id/text_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_email" />

            <TextView
                android:id="@+id/text_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_body"
                app:layout_constraintTop_toBottomOf="@+id/text_email"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus rutrum iaculis enim. Cras vitae vehicula ante. Suspendisse arcu orci, faucibus sit amet dapibus nec, accumsan sed metus. Nullam nec facilisis mauris. Sed imperdiet purus eget neque gravida, id malesuada quam fringilla. Ut pharetra, nulla quis elementum euismod, lorem turpis elementum sem, ac ultrices nunc erat et sapien. Vestibulum vehicula lacinia nulla, at suscipit tortor condimentum sed. Curabitur congue ut eros ac blandit. Sed nisl enim, dignissim eget rhoncus vitae, egestas sit amet purus." />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>